<% include ../partials/header %>

<h1 class="text-center">Edit <%= campground.name %></h1>

<div class="formidable">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="inputName">Name:</label>
            <input class="form-control" type="text" name="campground[name]" id="inputName" value="<%= campground.name %>" required>
        </div>
        <div class="form-group">
            <label for="inputImage">Image:</label>
            <input class="form-control" type="url" name="campground[image]" id="inputImage" value="<%= campground.image %>" required>
        </div>
        <div class="form-group">
            <label for="inputPrice">Price:</label>
            <input class="form-control" type="number" name="campground[price]" id="inputPrice" value="<%= Number(campground.price) %>" min="0.00" step="0.01" required>
        </div>
        <div class="form-group">
            <label for="inputLocation">Location:</label>
            <input class="form-control" type="text" name="location" id="inputLocation" value="<%= campground.location %>" required>
        </div>
        <div class="form-group">
            <label for="inputDescription">Description:</label>
            <textarea class="form-control" name="campground[description]" id="inputDescription" required><%= campground.description %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </div>
    </form>

    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<% include ../partials/footer %>