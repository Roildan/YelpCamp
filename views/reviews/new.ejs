<% include ../partials/header %>

<h1 class="text-center">New Review: <%= campground.name %></h1>

<div class="formidable">
    <form action="/campgrounds/<%= campground._id %>/reviews" method="POST">
        <div class="form-group">
            <label for="rating">*Leave a Rating:</label>
            <fieldset class="form-group" id="rating">
                <div>
                    <input type="radio" id="rate5" name="review[rating]" value="5" checked>
                    <label for="rate5" title="5 starts - Amazing">
                        <%- '<i class="fas fa-star checked"></i>'.repeat(5) %>
                    </label>
                </div>
                <div>
                    <input type="radio" id="rate4" name="review[rating]" value="4" checked>
                    <label for="rate4" title="4 stars - Very Good">
                        <%- '<i class="fas fa-star checked"></i>'.repeat(4) %>
                    </label>
                </div>
                <div>
                    <input type="radio" id="rate3" name="review[rating]" value="3" checked>
                    <label for="rate3" title="3 stars - Average">
                        <%- '<i class="fas fa-star checked"></i>'.repeat(3) %>
                    </label>
                </div>
                <div>
                    <input type="radio" id="rate2" name="review[rating]" value="2" checked>
                    <label for="rate2" title="2 stars - Not Good">
                        <%- '<i class="fas fa-star checked"></i>'.repeat(2) %>
                    </label>
                </div>
                <div>
                    <input type="radio" id="rate1" name="review[rating]" value="1" checked>
                    <label for="rate1" title="1 star - Awefull">
                        <%- '<i class="fas fa-star checked"></i>'.repeat(1) %>
                    </label>
                </div>
            </fieldset>
        </div>
        <div class="form-group">
            <label for="inputDescription">Description:</label>
            <textarea class="form-control" name="review[text]" id="inputDescription" placeholder="Write your review..."></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit a Review!</button>
        </div>
    </form>

    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<% include ../partials/footer %>