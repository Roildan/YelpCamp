<% include ../partials/header %>

<h1 class="text-center">Edit Your Profile</h1>

<div class="formidable">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="inputAddress1">Address 1:</label>
            <input class="form-control" type="text" name="user[address][address1]" id="inputAddress1"
                value="<%= user.address.address1 %>" placeholder="4 Privet Drive">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Address 2:</label>
            <input class="form-control" type="text" name="user[address][address2]" id="inputAddress2"
                value="<%= user.address.address2 %>" placeholder="Under the stairs">
        </div>
        <div class="form-group">
            <label for="inputCity">City:</label>
            <input class="form-control" type="text" name="user[address][city]" id="inputCity"
                value="<%= user.address.city %>" placeholder="Little Whinging">
        </div>
        <div class="form-group">
            <label for="inputZipCode">Zip Code:</label>
            <input class="form-control" type="text" name="user[address][zipCode]" id="inputZipCode"
                value="<%= user.address.zipCode %>" placeholder="06650">
        </div>
        <div class="form-group">
            <label for="inputCountry">Country:</label>
            <input class="form-control" type="text" name="user[address][country]" id="inputCountry"
                value="<%= user.address.country %>" placeholder="England">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </div>
    </form>

    <a href="/users/<%= user._id %>">Go Back</a>
</div>

<% include ../partials/footer %>