<% include ../partials/header %>

<h1 class="text-center">Edit Your Profile</h1>

<div class="formidable">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="inputAvatar">Avatar:</label>
            <input class="form-control" type="url" name="user[avatar]" id="inputAvatar"
                value="<%= user.avatar %>" placeholder="https://image.jpg">
        </div>
        <div class="form-group">
            <label for="inputFirstName">First Name:</label>
            <input class="form-control" type="text" name="user[firstName]" id="inputFirstName"
                value="<%= user.firstName %>" placeholder="Harry">
        </div>
        <div class="form-group">
            <label for="inputLastName">Last Name:</label>
            <input class="form-control" type="text" name="user[lastName]" id="inputLastName"
                value="<%= user.lastName %>" placeholder="Potter">
        </div>
        <div class="form-group">
            <label for="inputEmail">Email:</label>
            <input class="form-control" type="email" name="user[email]" id="inputEmail"
                value="<%= user.email %>" placeholder="harry.potter@hogward.univ">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </div>
    </form>

    <a href="/users/<%= user._id %>">Go Back</a>
</div>

<% include ../partials/footer %>